
<table class="table table-striped">
	<thead>
		<tr>
			<th>Id</th>		
			<th>Имя</th>
			<th>Телефон</th>
			<th>Дата записи</th>
			<th>Парикмахер</th>
			<th>Цвет</th>
		</tr>
	</thead>

	<tbody>
		<% @results.each do |row| %>
			<tr>
				<td><%= row['Id'] %></td>			
				<td><%= row['Name'] %></td>
				<td><%= row['Phone'] %></td>
				<td><%= row['DateStamp'] %></td>
				<td><%= row['Barber'] %></td>
				<td style="background-color: <%= row['Color'] %>"><%= row['Color'] %></td>
			</tr>
		<% end %>
	</tbody>

</table>
